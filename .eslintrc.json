{
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "blockBindings": true
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "indent": [ 2, 4 ],
        "quotes": [ 2, "single" ],
        "linebreak-style": [ 2, "unix" ],
        "semi": [ 2, "always" ],
        "block-scoped-var": 1,
        "curly": 2,
        "dot-notation": 1,
        "dot-location": [ 2, "property" ],
        "eqeqeq": [ 2, "allow-null" ],
        "guard-for-in": 2,
        "no-caller": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-multi-spaces": 2,
        "radix": 2,
        "yoda": [ 2, "never" ],
        "global-require": 1,
        "no-mixed-requires": 1
    }
}
